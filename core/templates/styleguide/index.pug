extends /templates/_layouts/master

block append pageVariables
    - var htmlClass = 'br-styleguide br-styleguide-default-styles-active'

block body

    .br-styleguide-container

        .br-styleguide-header
            if styleguideLogoAsImage
                a(href=styleguideBrandLink?styleguideBrandLink:"")
                    img.br-styleguide-logo(src=styleguideLogoAsImagePath alt=styleguideLogoAsImageAlt width=styleguideLogoAsImageForceWidth)
            else
                h1.br-styleguide-brand-heading(class=styleguideBrandClass)
                    a.br-reset-link-styling(href=styleguideBrandLink?styleguideBrandLink:"/styleguide" class=styleguideResetLinkStylingClass) #{projectTitle}

        if config.styleguide.search
            if styleguideSearchCustomTemplate
                include /templates/_includes/styleguide-search-custom-template
            else
                input#styleguideSearch(type="search" placeholder=styleguideSearchPlaceholderString class=styleguideInputClass)

        .br-styleguide-navigation-holder

            block nav
                include ../includes/styleguide-nav

        .br-styleguide-content
            .br-styleguide-content-inner
                block content
                    block homeContent
                        // Place style guide introduction here. By default redirects to first docs page.
                        script.
                            window.location = "/styleguide/docs/introduction.html"
